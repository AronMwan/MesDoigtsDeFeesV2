@model IEnumerable<MesDoigtsDeFees.Models.LessonRichting>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer
@{
    ViewData["Title"] = "Index";
}

<h1>@_localizer["Trajecten"]</h1>

<p>
    <a asp-action="Create">@_localizer["Maak een nieuwe traject aan"]</a>
</p>
<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Richting)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Lesson)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RichtingName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LessonName)
            </td>
           
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">@_localizer["Bijwerken"]</a> 
                <a asp-action="Details" asp-route-id="@item.Id">@_localizer["Details"]</a> 
                <a asp-action="Delete" asp-route-id="@item.Id">@_localizer["Verwijderen"]</a>
            </td>
        </tr>
}
    </tbody>
</table>
