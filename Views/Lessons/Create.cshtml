@model MesDoigtsDeFees.Models.Lesson
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer
@{
    ViewData["Title"] = "Create";
}

<h1>@_localizer["Maak een nieuwe les aan"]</h1>

<h4>@_localizer["Les"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" asp-items="@(new SelectList(ViewBag.TypeList))" class="form-control">
                    <option value="">@_localizer["Selecteer een type"]</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="GroupId" class="control-label">Group</label>
                <select asp-for="GroupId" asp-items="@(ViewBag.GroupList)" class="form-control">
                    <option value="">@_localizer["Selecteer een groep"]</option>
                </select>
                <span asp-validation-for="GroupId" class="text-danger"></span>
            </div>






            <div class="form-group">
                <input type="submit" value=@_localizer["Aanmaken"] class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@_localizer["Terug naar lijst"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
